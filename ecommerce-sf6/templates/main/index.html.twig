{% extends 'base.html.twig' %}

{% block title %} Acceuil
{% endblock %}

{% block body %}

	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1> Site E-commerce </h1>
				<p> Bievenue dans notre boutique </p>
			</div>
			{% for category in categories %}
				{% if category.parent == null %}
					<div class="col12">
						<h2> {{ category.name }} </h2>
					</div>
				{% else %}
					<div class="col-4">
						<div class="card">
							<div class="card-body">
								<h3 class="card-title">{{ category.name }}</h3>
								<a href="{{ path('categories_list',{slug: category.slug}) }}" class="btn btn-primary"> Voir les produits </a>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</section>
	</main>

{% endblock %}
