{% extends 'base.html.twig' %}

{% block title %} liste des priduits de la catégorie {{ category.name }} {% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1> liste des priduits de la catégorie {{ category.name }} </h1>
            </div>
            {% for product in products  %}
                <div class="col-3 mb-3">
                    <article class="card h-100 ">
                        <div class="card-body">
                            <h2 class="card-title">{{ product.name }}</h2>
                            <p class="card-text">{{ product.description }}</p>
                            <a href="{{ path('products_details', {"slug": product.slug }) }}" class="btn btn-primary">Voir les détails</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}